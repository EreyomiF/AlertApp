<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Live Report</name>
    <description>Incident Report App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
       Ereyomi Funmilola
    </author>

    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />

    <!-- Icon configuration -->
    <platform name="android">
        <icon src="resources/icons/android/icon-36x36.png" density="ldpi" />
        <icon src="resources/icons/android/icon-48x48.png" density="mdpi" />
        <icon src="resources/icons/android/icon-72x72.png" density="hdpi" />
        <icon src="resources/icons/android/icon-96x96.png" density="xhdpi" />
        <icon src="resources/icons/android/icon-144x144.png" density="xxhdpi" />
        <icon src="resources/icons/android/icon-192x192.png" density="xxxhdpi" />
            <icon src="resources/icons/android/icon-192x192.png" />
    </platform>

    <plugin name="cordova-plugin-geolocation" source="npm" />
    <plugin name="cordova-plugin-camera" source="npm" />
    <plugin name="cordova-plugin-file" source="npm" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
</widget>
